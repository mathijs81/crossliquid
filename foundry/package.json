{
  "name": "@svelte-scaffold-eth/foundry",
  "version": "0.1.0",
  "description": "Foundry smart contracts for Svelte Scaffold ETH",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "test:verbose": "forge test -vvv",
    "format": "forge fmt",
    "format:check": "forge fmt --check",
    "lint": "pnpx solhint 'src/**/*.sol' 'script/**/*.sol' 'test/**/*.sol'",
    "clean": "rm -rf cache out broadcast",
    "chain": "bash anvil.sh",
    "chain:kill": "bash anvil.sh --kill",
    "chain:restart": "bash anvil.sh --restart",
    "deploy:anvil": "forge script script/Deploy.s.sol --rpc-url anvil --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --broadcast && pnpm deploy:uniswap:anvil",
    "deploy:uniswap:anvil": "forge script script/DeployUniswapV4.s.sol:DeployUniswapV4 --rpc-url anvil --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --broadcast",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url sepolia --private-key $PRIVATE_KEY --broadcast --verify",
    "deploy:base-sepolia": "forge script script/Deploy.s.sol --rpc-url base-sepolia --private-key $PRIVATE_KEY --broadcast --verify",
    "deploy:optimism-sepolia": "forge script script/Deploy.s.sol --rpc-url optimism-sepolia --private-key $PRIVATE_KEY --broadcast --verify",
    "deploy:arbitrum-sepolia": "forge script script/Deploy.s.sol --rpc-url arbitrum-sepolia --private-key $PRIVATE_KEY --broadcast --verify",
    "verify:sepolia": "forge verify-contract <CONTRACT_ADDRESS> src/YourContract.sol:YourContract --chain sepolia --watch",
    "snapshot": "forge snapshot",
    "snapshot:diff": "forge snapshot --diff"
  },
  "keywords": [
    "solidity",
    "foundry",
    "ethereum",
    "smart-contracts"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.1.0",
    "solhint": "^6.0.3",
    "tsx": "^4.21.0"
  }
}
